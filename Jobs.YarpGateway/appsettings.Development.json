{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "vacancy-route": {
        "ClusterId": "vacancy-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "vacancyservice/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          } ]
      },
      "company-route": {
        "ClusterId": "company-cluster",
        "Match": {
          "Path": "companyservice/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          } ]
      },
      "reference-route": {
        "ClusterId": "reference-cluster",
        "Match": {
          "Path": "referenceservice/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          } ]
      },
      "account-route": {
        "ClusterId": "account-cluster",
        "Match": {
          "Path": "accountservice/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          } ]
      }
    },
    "Clusters": {
      "vacancy-cluster": {
        "_comment": "LoadBalancingPolicy\": \"RoundRobin",
        "Destinations": {
          "VacancyService": {
            "Address": "https://localhost:7111"
          }
        }
      },
      "company-cluster": {
        "Destinations": {
          "CompanyService": {
            "Address": "https://localhost:7056"
          }
        }
      },
      "reference-cluster": {
        "Destinations": {
          "ReferenceService": {
            "Address": "https://localhost:7006"
          }
        }
      },
      "account-cluster": {
        "Destinations": {
          "AccountService": {
            "Address": "https://localhost:7159"
          }
        }
      },
      "LoadBalancingPolicy": "RoundRobin",
      "HealthCheck": {
        "Active": {
          "Enabled": true,
          "Interval": "00:00:60",
          "Timeout": "00:00:05",
          "Policy": "ConsecutiveFailures",
          "Path": "/api/health"
        }
      },
      "SessionAffinity": {
        "Enabled": true,
        "Policy": "Cookie",
        "FailurePolicy": "Redistribute",
        "AffinityKeyName": "SessionKey"
      }
    }
  }
}
