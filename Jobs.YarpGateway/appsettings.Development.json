{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "vacancy-route": {
        "ClusterId": "vacancy-cluster",
        "Match": {
          "Path": "vacancyservice/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          } ]
      },
      "company-route": {
        "ClusterId": "company-cluster",
        "Match": {
          "Path": "companyservice/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          } ]
      },
      "reference-route": {
        "ClusterId": "reference-cluster",
        "Match": {
          "Path": "referenceservice/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          } ]
      },
      "account-route": {
        "ClusterId": "account-cluster",
        "Match": {
          "Path": "accountservice/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          } ]
      }
    },
    "Clusters": {
      "vacancy-cluster": {
        "Destinations": {
          "VacancyService": {
            "Address": "https://localhost:7111"
          }
        }
      },
      "company-cluster": {
        "Destinations": {
          "CompanyService": {
            "Address": "https://localhost:7056"
          }
        }
      },
      "reference-cluster": {
        "Destinations": {
          "ReferenceService": {
            "Address": "https://localhost:7006"
          }
        }
      },
      "account-cluster": {
        "Destinations": {
          "AccountService": {
            "Address": "https://localhost:7159"
          }
        }
      }
    }
  }
}
